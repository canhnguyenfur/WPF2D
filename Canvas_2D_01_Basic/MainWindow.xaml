<Window x:Class="Canvas_2D_01_Basic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvas_2D_01_Basic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Width="400" Height="300" Background="LightGray">
            <Rectangle Width="100" Height="100" Fill="Red" Panel.ZIndex="2"></Rectangle>
            <Rectangle Width="100"
                       Height="100"
                       Panel.ZIndex="4"
                       Fill="Yellow" Canvas.Left="50" Canvas.Top="50"></Rectangle>
            <Rectangle Width="100"
                       Height="100"
                       Fill="Green"
                       Canvas.Left="100"
                       Canvas.Top="100"
                       Panel.ZIndex="3"></Rectangle>
            <Button Width="100" Height="40" Canvas.Bottom="0" >OK</Button>
        </Canvas>
    </Grid>
      
</Window>
