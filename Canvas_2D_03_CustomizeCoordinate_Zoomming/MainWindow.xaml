<Window x:Class="Canvas_2D_03_CustomizeCoordinate_Zoomming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvas_2D_03_CustomizeCoordinate_Zoomming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom">
            <TextBlock Text="x1Min"></TextBlock>
            <TextBox Width="100"
                     x:Name="txt_x1min"></TextBox>
            <TextBlock Text="y1Min"></TextBlock>
            <TextBox Width="100"
                     x:Name="txt_y1min"></TextBox>
            <TextBlock Text="x2Max"></TextBlock>
            <TextBox Width="100"
                     x:Name="txt_x2max"></TextBox>
            <TextBlock Text="y2Max"></TextBlock>
            <TextBox Width="100"
                     x:Name="txt_y2max"></TextBox>
            <Button Click="Button_Click"
                    Width="100">Draw</Button>
        </WrapPanel>
        <Canvas x:Name="cv" Background="LightGray"></Canvas>
    </DockPanel>
</Window>
